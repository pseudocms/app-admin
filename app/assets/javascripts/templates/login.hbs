<div class="login-form">
  <form {{action login on="submit"}}>
    <ul>
      <li>
        <h2>Please Login</h2>
        <span class="required-notification">* denotes a required field</span>
      </li>
      {{#if errorMessage}}
      <li class="error">{{errorMessage}}</li>
      {{/if}}
      <li>
        <label for="email">Email:</label>
        {{input type="email" value=email placeholder="user@example.com" required=true}}
      </li>
      <li>
        <label for="password">Password:</label>
        {{input type="password" value=password required="true"}}
      </li>
      <li>
        <button class="btn btn--primary">Login</button>
      </li>
    </ul>
  </form>
</div>
